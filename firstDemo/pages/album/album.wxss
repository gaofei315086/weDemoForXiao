/* pages/album/album.wxss */
.album-box {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
}
.pic-box {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  width: 70%;
}
.slide-image {
  width:100%;
  height:100%
}
.album-box-side {
  width:15%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}
.album-box-side-item {
  display: flex;
  display: -webkit-flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}
.album-image {
  width:50%;
  height:50%
}